{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AiBal",
  "version": "0.1.0",
  "identifier": "com.cuk.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": false
    },
    "windows": [
      {
        "label": "main",
        "title": "AiBal",
        "url": "/home",
        "width": 300,
        "height": 360,
        "minWidth": 280,
        "minHeight": 300,
        "resizable": false,
        "fullscreen": false,
        "center": false,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://claude.ai https://api.anthropic.com https://*.statuspage.io https://raw.githubusercontent.com https://*.github.io https://api.github.com"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "AiBal - AI 服务用量监控助手",
    "longDescription": "macOS 菜单栏应用，用于追踪 AI 服务使用量、余额和状态，支持插件扩展。",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    }
  },
  "plugins": {}
}
